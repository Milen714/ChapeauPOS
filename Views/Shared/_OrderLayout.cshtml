@using ChapeauPOS.Commons;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChapeauPOS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alata&family=Lobster&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/MyStyle.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChapeauPOS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/@(Context.Request.Cookies["PreferedTheme"] == "Dark" ? "DarkTheme.css" : "LightTheme.css")" />

</head>
<body>
    <header>
        <nav class="nav_bar">
            <div class="nav_ul_container">
                <ul class="nav_ul">
                    <li class="nav_item">
                        <a class="Logout_Button" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                    </li>

                </ul>
            </div>
            <div class="Logo_container">
                <div class="Logo"></div>
                <a class="LogoText" asp-area="" asp-controller="Home" asp-action="Index"></a>
            </div>
            @{
                if (Context.Request.Cookies["PreferedTheme"] == "Dark")
                {
                    <div class="nav_status_Right">
                        <div class="nav_status_Right">
                            <a class="Buttons_IntableActions" href="/Orders/SendOrder/@ViewBag.TableNumber"><img src="/assets/Smallicons/Send24White.svg" alt="Alternate Text" />Send</a>
                            <a id="DisplayBill" class="Buttons_IntableActions"><img src="/assets/Smallicons/Check24White.svg" alt="Alternate Text" />Check</a>
                            <a class="Buttons_IntableActions" href="/Orders/Payment/@ViewBag.TableNumber"><img src="/assets/Smallicons/Settlepayment24White.svg" alt="Alternate Text" />Settle Payment</a>

                        </div>
                    </div>
                }
                else if (Context.Request.Cookies["PreferedTheme"] == "Light")
                {
                    <div class="nav_status_Right">
                        <div class="nav_status_Right">
                            <a style="color: black;" class="Buttons_IntableActions" href="/Orders/SendOrder/@ViewBag.TableNumber"><img src="/assets/Smallicons/Send24Black.svg" alt="Alternate Text" />Send</a>
                            <a style="color: black;" class="Buttons_IntableActions"><img src="/assets/Smallicons/Check24Black.svg" alt="Alternate Text" />Check</a>
                            <a style="color: black;" class="Buttons_IntableActions" href="/Orders/Payment/@ViewBag.TableNumber"><img src="/assets/Smallicons/Settlepayment24Black.svg" alt="Alternate Text" />Settle Payment</a>

                        </div>
                    </div>
                }
            }
            
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <nav class="nav_bar">
            <div class="nav_ul_container">
                <ul class="nav_ul">

                    @{
                        Employee loggedInEmployee = ViewBag.LoggedInEmployee;
                        if (ViewBag.LoggedInEmployee != null)
                        {
                            switch (loggedInEmployee.Role)
                            {
                                case Roles.Manager:
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Tables" asp-action="Index">Tables</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="KitchenRunningOrders">Kitchen</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="BarRunningOrders">Bar</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Menu</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">@ViewBag.LoggedInEmployee.FirstName @ViewBag.LoggedInEmployee.LastName</a>
                                    </li>

                                    break;
                                case Roles.Waiter:
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Tables" asp-action="Index">Tables</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="KitchenRunningOrders">Kitchen</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="BarRunningOrders">Bar</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Orders</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Clients</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Menu</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">@ViewBag.LoggedInEmployee.FirstName @ViewBag.LoggedInEmployee.LastName</a>
                                    </li>

                                    break;
                                case Roles.Bartender:
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="Tables" asp-action="Index">Tables</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="BarRunningOrders">BarView</a>
                                    </li>
                                    break;
                                case Roles.Cook:
                                    <li class="nav_itemm">
                                        <a asp-area="" asp-controller="Tables" asp-action="Index">Tables</a>
                                    </li>
                                    <li class="nav_item">
                                        <a asp-area="" asp-controller="KitchenBar" asp-action="KitchenRunningOrders">Kitchen View</a>
                                    </li>
                                    break;
                            }
                        }
                    }

                </ul>
            </div>
        </nav>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
