@model ChapeauPOS.Models.ViewModels.MenuViewModel

@{
    ViewData["Title"] = "Menu Items";
    var selectedCourse = Context.Request.Query["course"].ToString();
    var selectedCategory = Context.Request.Query["category"].ToString();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f8f9fa;
    }

    .menu-card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        padding: 20px;
        transition: transform 0.2s ease;
    }

    .menu-card:hover {
        transform: scale(1.01);
    }

    .menu-header {
        border-bottom: 1px solid #dee2e6;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    .badge-status {
        font-size: 0.9rem;
        padding: 0.4em 0.6em;
        border-radius: 0.5rem;
    }

    .form-select, .form-control {
        border-radius: 0.5rem;
    }

    .btn {
        border-radius: 0.5rem;
    }
</style>

<div class="container mt-4 mb-5" style="margin-bottom: 5rem ;>
    <div class="menu-card">
        <div class="menu-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <a asp-controller="Menu" asp-action="Create" class="btn btn-success">➕ Add New Item</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form method="get" asp-action="Index" asp-controller="Menu" class="row g-3 align-items-end mb-3">
            <div class="col-md-4">
                <label class="form-label">Course</label>
                <select name="course" class="form-select">
                    @{
                        var courseList = new[] { "Starter", "Entree", "Main", "Dessert", "Drink" };
                        foreach (var course in courseList)
                        {
                            var selected = selectedCourse == course ? "selected" : "";
                            @:<option value="@course" @selected>@course</option>
                        }
                        var allCourseSelected = string.IsNullOrEmpty(selectedCourse) ? "selected" : "";
                        @:<option value="" @allCourseSelected>All Courses</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Category</label>
                <select name="category" class="form-select">
                    @{
                        var categoryList = new[] { "Lunch", "Dinner", "Drinks" };
                        foreach (var category in categoryList)
                        {
                            var selected = selectedCategory == category ? "selected" : "";
                            @:<option value="@category" @selected>@category</option>
                        }
                        var allCategorySelected = string.IsNullOrEmpty(selectedCategory) ? "selected" : "";
                        @:<option value="" @allCategorySelected>All Categories</option>
                    }
                </select>
            </div>

            <div class="col-md-4 text-end">
                <button type="submit" class="btn btn-primary">🔍 Filter</button>
            </div>
        </form>

        <p class="text-muted mb-4">Total items returned: <strong>@Model.Category?.Count</strong></p>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name & Category</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>VAT</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Update Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Category != null && Model.Category.Any())
                    {
                        foreach (var item in Model.Category)
                        {
                            var statusClass = item.Stock == 0 ? "bg-danger" :
                                              item.Stock <= 10 ? "bg-warning text-dark" :
                                              "bg-success";
                            var statusText = item.Stock == 0 ? "Out of Stock" :
                                             item.Stock <= 10 ? "Low Stock" :
                                             "In Stock";

                            <tr>
                                <td>
                                    <div class="fw-bold">@item.ItemName</div>
                                    <small class="text-muted">(@item.Category?.CategoryName)</small>
                                </td>
                                <td>@item.ItemDescription</td>
                                <td>€@item.ItemPrice.ToString("F2")</td>
                                <td>
                                    <span class="badge bg-@(item.VAT ? "info" : "secondary")">
                                        @(item.VAT ? "Yes" : "No")
                                    </span>
                                </td>
                                <td>@item.Stock</td>
                                <td>
                                    <span class="badge badge-status @statusClass">@statusText</span>
                                </td>
                                <td>
                                    <form asp-action="UpdateStock" asp-controller="Menu" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="id" value="@item.MenuItemID" />
                                        <input type="number" name="stock" value="@item.Stock" min="0" class="form-control form-control-sm" style="width: 70px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary">✔</button>
                                    </form>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        <a class="btn btn-sm btn-outline-info"
                                           asp-controller="Menu"
                                           asp-action="Edit"
                                           asp-route-id="@item.MenuItemID">Edit</a>

                                        @if (item.IsActive)
                                        {
                                            <a class="btn btn-sm btn-outline-danger"
                                               asp-controller="Menu"
                                               asp-action="Deactivate"
                                               asp-route-id="@item.MenuItemID">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-outline-success"
                                               asp-controller="Menu"
                                               asp-action="Activate"
                                               asp-route-id="@item.MenuItemID">Activate</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No menu items found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
