@model ChapeauPOS.Models.MenuItem

@{
    ViewData["Title"] = "Add New Menu Item";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <article class="input_group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="input_field" required />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="ItemDescription"></label>
        <textarea asp-for="ItemDescription" class="input_field" rows="3"></textarea>
        <span asp-validation-for="ItemDescription" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="ItemPrice"></label>
        <input asp-for="ItemPrice" type="number" step="0.01" class="input_field" required />
        <span asp-validation-for="ItemPrice" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="VAT">Apply VAT?</label>
        <input asp-for="VAT" type="checkbox" class="input_field" />
        <span asp-validation-for="VAT" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="Category.CategoryID">Category</label>
        <select asp-for="Category.CategoryID" class="input_field"
                asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Category.CategoryID" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" class="input_field" asp-items="Html.GetEnumSelectList<ChapeauPOS.Models.MenuCourse>()">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </article>

    <article class="input_group">
        <label asp-for="IsActive">Is Active</label>
        <select asp-for="IsActive" class="input_field">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </article>

    <button type="submit" class="add_entity_main">Add Menu Item</button>
    <a asp-action="Index" class="cancel_button">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
