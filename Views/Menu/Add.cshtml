@model ChapeauPOS.Models.MenuItem
@{
    ViewData["Title"] = "Add Menu Item";
}

<h2>Add Menu Item</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ItemDescription"></label>
        <input asp-for="ItemDescription" />
        <span asp-validation-for="ItemDescription" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ItemPrice"></label>
        <input asp-for="ItemPrice" type="number" step="0.01" />
        <span asp-validation-for="ItemPrice" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="VAT"></label>
        <input asp-for="VAT" type="checkbox" />
        <span asp-validation-for="VAT" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Category.CategoryID">Category</label>
        <select asp-for="Category.CategoryID" asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Category.CategoryID" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Course"></label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList<ChapeauPOS.Models.MenuCourse>()">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>

    <button type="submit">Add</button>
    <a asp-action="Index">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");//partial view 
    }
}
