@model ChapeauPOS.Models.ViewModels.MenuViewModel

<div id="courseSidebar">
    <button class="CourseSelectionButtons" onclick="filterCourse('starter')"><img src="/assets/Property 1=AppetizerWhite.svg" alt="Alternate Text" /> Starter</button>
    <button onclick="filterCourse('main')"><img src="/assets/Property 1=MainWhite.svg" alt="Alternate Text" /> Main</button>
    <button onclick="filterCourse('dessert')"><img src="/assets/Property 1=DesertWhite.svg" alt="Alternate Text" /> Dessert</button>
    <button onclick="filterCourse('drink')">Drinks</button>
</div>

<div id="menuItemsContainer">
    @foreach (var item in Model.Starters)
    {
        var menuItemClass = "menu-item square clickable-item";
        if (item.Stock == 0)
        {
            menuItemClass += " out-of-stock";
        }
        else if (item.Stock < 10)
        {
            menuItemClass += " low-stock";
        }
        <form class="menu-item-form" method="post">
            <div class="MenuItemButton_Wrap">
                <input class="item-id" type="hidden" name="itemId" value="@item.MenuItemID" />
                <div class="@menuItemClass" data-course="starter">
                    <h4>@item.ItemName</h4>
                    <p>@item.ItemPrice.ToString("C")</p>
                    <p>@item.Stock</p>
                </div>
                <input type="text" class="note-input" name="note" placeholder="Add note" data-course="starter" @(item.Stock == 0 ? "disabled" : "") />
            </div>
        </form>
    }
    @foreach (var item in Model.MainCourses)
    {
        var menuItemClass = "menu-item square clickable-item";
        if (item.Stock == 0)
        {
            menuItemClass += " out-of-stock";
        }
        else if (item.Stock < 10)
        {
            menuItemClass += " low-stock";
        }
        <form class="menu-item-form" method="post">
            <div class="MenuItemButton_Wrap">
                <input class="item-id" type="hidden" name="itemId" value="@item.MenuItemID" />
                <div class="@menuItemClass" data-course="main">
                    <h4>@item.ItemName</h4>
                    <p>@item.ItemPrice.ToString("C")</p>
                    <p>@item.Stock</p>
                </div>
                <input type="text" class="note-input" name="note" placeholder="Add note" data-course="main" @(item.Stock == 0 ? "disabled" : "") />
            </div>
        </form>
    }
    @foreach (var item in Model.Desserts)
    {
        var menuItemClass = "menu-item square clickable-item";
        if (item.Stock == 0)
        {
            menuItemClass += " out-of-stock";
        }
        else if (item.Stock < 10)
        {
            menuItemClass += " low-stock";
        }
        <form class="menu-item-form" method="post">
            <div class="MenuItemButton_Wrap">
                <input class="item-id" type="hidden" name="itemId" value="@item.MenuItemID" />
                <div class="@menuItemClass" data-course="dessert">
                    <h4>@item.ItemName</h4>
                    <p>@item.ItemPrice.ToString("C")</p>
                    <p>@item.Stock</p>
                </div>
                <input type="text" class="note-input" name="note" placeholder="Add note" data-course="dessert" @(item.Stock == 0 ? "disabled" : "") />
            </div>
        </form>
    }
    @if(Model.Drinks != null)
    {
        foreach (var item in Model.Drinks)
        {
            var menuItemClass = "menu-item square clickable-item";
            if (item.Stock == 0)
            {
                menuItemClass += " out-of-stock";
            }
            else if (item.Stock < 10)
            {
                menuItemClass += " low-stock";
            }
            <form class="menu-item-form" method="post">
                <div class="MenuItemButton_Wrap">
                    <input class="item-id" type="hidden" name="itemId" value="@item.MenuItemID" />
                    <div class="@menuItemClass" data-course="drink">
                        <h4>@item.ItemName</h4>
                        <p>@item.ItemPrice.ToString("C")</p>
                        <p>@item.Stock</p>
                    </div>
                    <input type="text" class="note-input" name="note" placeholder="Add note" data-course="drink" @(item.Stock == 0 ? "disabled" : "") />
                </div>
            </form>
        }
    }
</div>
